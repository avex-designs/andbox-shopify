{%- if section.settings.show_product_recommendations -%}
  {%- if recommendations.performed -%}
    {%- if recommendations.products_count > 0 -%}

   <section id="andbox_picks_slider_section">
     <header>
  	   
          
          {%- if section.settings.heading != blank -%}
            <h3 class="header_3">{{ section.settings.heading | escape }}</h3>
          {%- endif -%}
          
        </header>
         <div class="slider-container">

    	<div id="recommended" class="owl-carousel owl-theme">
          
          {% assign grid_item_width = 'small--one-half medium--one-half large--one-quarter' %}
          {%- for product in recommendations.products -%}
            {% include 'product-grid-item_slider' %}
          {%- endfor -%}
          
        </div>
     </div>
      </section>

    {%- endif -%}
  {%- else  -%}

    <div data-product-id="{{ product.id }}" data-section-id="{{ section.id }}" data-section-type="product-recommendations"></div>

  {%- endif -%}
{%- endif -%}


<script>
$(document).ready(function(){
  
  $("#recommended").owlCarousel({
    items: 3,
    slideBy: 3,
    nav: true,
    dots: false,
    mouseDrag: false,
    touchDrag: false,
    margin: 80,
    navText: ['<span class="hero-prev">Prev</span>','<span class="hero-next">Next</span>'],
    responsive: {
      0 : {
          items: 3,
          margin: 24,
          mouseDrag: true,
          touchDrag: true,
          slideBy: 1,
        loop: true
      },
      768 : {
          items : 3,
          margin: 32
      },
      1024 : {
        margin: 80
      }
    }

  });
  
});
</script>

